<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/RelativeLayout1"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context=".VeilRingActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Veil and Ring Features"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:background="@drawable/textbox_border">

        <TextView android:id="@+id/textVeilType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Select Veil Type:" />
        <Spinner
            android:id="@+id/spinnerVeilType"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/textbox_border"
            android:spinnerMode="dropdown"
            android:tag="Veil_Type"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:background="@drawable/textbox_border">

        <TextView android:id="@+id/textVeilColour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Select Veil Colour:" />
        <Spinner
            android:id="@+id/spinnerVeilColour"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/textbox_border"
            android:spinnerMode="dropdown"
            android:tag="Veil_Colour"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:background="@drawable/textbox_border">

        <TextView android:id="@+id/textRingQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Select Ring Quantity:" />
        <Spinner
            android:id="@+id/spinnerRingQuantity"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/textbox_border"
            android:spinnerMode="dropdown"
            android:tag="Ring_Quantity"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:background="@drawable/textbox_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView android:id="@+id/textRingType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Select Ring Type:" />

            <Button
                android:id="@+id/ringTypesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:text="See Example Ring Types"
                android:textAlignment="center"
                android:textSize="12dp"/>
        </LinearLayout>

        <Spinner
            android:id="@+id/spinnerRingType"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/textbox_border"
            android:spinnerMode="dropdown"
            android:tag="Ring_Type"/>
    </LinearLayout>

    <Button
        android:id="@+id/buttonSaveAndReturnVeilRingFeatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Save and Return"
        android:textAlignment="center"/>
</LinearLayout>
</ScrollView>