<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/RelativeLayout1"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GillFeaturesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gill Features"
            android:layout_marginBottom="30dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView android:id="@+id/textCapShape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Gill Attachment:"
                android:layout_weight="2"/>

            <Button
                android:id="@+id/gillAttachmentsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:text="See Example Gill Attachment"
                android:textAlignment="center"
                android:textSize="12dp"/>
        </LinearLayout>

        <TextView android:id="@+id/textGillAttachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Gill Attachment:" />
        <Spinner
            android:id="@+id/spinnerGillAttachment"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/textbox_border"
            android:spinnerMode="dropdown"
            android:tag="Gill_Attachment"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView android:id="@+id/textGillSpacing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Gill Spacing:"
                android:layout_weight="2"/>

            <Button
                android:id="@+id/gillSpacingsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:text="See Example Gill Spacings"
                android:textAlignment="center"
                android:textSize="12dp"/>
        </LinearLayout>

        <Spinner
            android:id="@+id/spinnerGillSpacing"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/textbox_border"
            android:spinnerMode="dropdown"
            android:tag="Gill_Spacing"/>

        <TextView android:id="@+id/textGillSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Gill Size:" />
        <Spinner
            android:id="@+id/spinnerGillSize"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/textbox_border"
            android:spinnerMode="dropdown"
            android:tag="Gill_Size"/>

        <TextView android:id="@+id/textGillColour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Gill Colour:" />
        <Spinner
            android:id="@+id/spinnerGillColour"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/textbox_border"
            android:spinnerMode="dropdown"
            android:tag="Gill_Colour"/>

        <Button
            android:id="@+id/buttonSaveAndReturnGillFeatures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Save and Return"
            android:textAlignment="center"/>
    </LinearLayout>
</ScrollView>